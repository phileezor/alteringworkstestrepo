/* Custom font inclusion */
@font-face {
    font-family: 'Sackers Gothic Std Heavy';
    src: url('fonts/Sackers Gothic Std Heavy.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
}

/* General reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Make body take up full height */
html, body {
    height: 100%;
    font-family: Arial, sans-serif; /* Fallback font */
}

/* Apply custom font to all paragraphs */
p {
    font-family: 'Sackers Gothic Std Heavy', Arial, sans-serif; /* Fallback font */
}

/* Video background styling */
.video-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1; /* Ensure video stays behind the content */
}

#bg-video {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensure video covers entire background */
    transform: translate(-50%, -50%);
}

/* Content styling */
.content {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    text-align: center;
    color: white;
    z-index: 1;
}

.text-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    transform: translateY(20vh); /* This moves the entire text block down */
}

.fade-in {
    -webkit-animation: fadeIn 7s ease-in-out infinite;
    -moz-animation: fadeIn 7s ease-in-out infinite;
    -o-animation: fadeIn 7s ease-in-out infinite;
    animation: fadeIn 7s ease-in-out infinite;
    animation-delay: 0.54s;
}

.main-text {
    font-size: 2em;
    margin-bottom: 1em; /* Adds space between "coming soon" and social links */
}

.social-links {
    font-size: 1em;
}

.social-links span {
    margin: 0 12.5px; /* This adds 25px space between instagram and twitter (12.5px on each side) */
}

.social-links a {
    text-decoration: none; /* Remove default underline */
    color: inherit; /* Use the default text color */
    transition: text-decoration 0.3s ease; /* Smooth transition for underline */
}

.social-links a:hover {
    text-decoration: underline; /* Underline on hover */
}

.social-links a:not(:hover) {
    text-decoration: none; /* Remove underline when not hovering */
}

/* Fade-in animation */
@keyframes fadeIn {
    0%, 100% {
        opacity: 0;
    }
    50% {
        opacity: 1;
    }
}
